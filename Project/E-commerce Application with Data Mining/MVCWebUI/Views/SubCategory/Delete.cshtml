@model Ecommerce.Entities.SubCategory

@{
    ViewBag.Title = "Delete";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sil</h2>
<p class="error">@ViewBag.ErrorMessage</p>

<h3>Alt kategoriyi silmek istediğinize emin misiniz?</h3>
<div>
    <h4>Alt Kategori</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
Kategori Adı
                </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.Category_Name)
        </dd>

        <dt>
Alt Kategori Adı
                </dt>

        <dd>
            @Html.DisplayFor(model => model.SubCategory_Name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-default" /> |
            @Html.ActionLink("Listeye Geri Dön", "SubCategoryList")
        </div>
    }
</div>
