@model IEnumerable<Ecommerce.Entities.City>

@{
    ViewBag.Title = "CityList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>City List</h1>

<p align="right">
    @Html.ActionLink("Add New City", "CityAdd")
</p>

<table class="table">
    <tr>
        <th>City Name</th>
        <th>Operations</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }) |
            @Html.ActionLink("Add County", "../CityCounty/CityCountyAdd", new { id = item.Id })
        </td>
    </tr>
}

</table>
