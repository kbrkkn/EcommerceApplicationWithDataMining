@model Ecommerce.Entities.Category

@{
    ViewBag.Title = "CategoryDelete";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kategori Sil</h2>
<p class="error">@ViewBag.ErrorMessage</p>

<h3>Bu kategoriyi silmek istediğinize emin misiniz?</h3>
<div>
    <h4>Kategory</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
Kategori Adı
                </dt>

        <dd>
            @Html.DisplayFor(model => model.Category_Name)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-default" /> |
            @Html.ActionLink("Listeye Geri Dön", "CategoryList")
        </div>
    }
</div>
